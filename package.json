{
  "name": "starter-template-ts",
  "version": "0.0.0",
  "type": "module",
  "packageManager": "pnpm@10.17.1",
  "description": "_description_",
  "author": {
    "name": "sankeyangshu",
    "email": "sankeyangshu@gmail.com",
    "url": "https://github.com/sankeyangshu"
  },
  "license": "MIT",
  "homepage": "https://github.com/sankeyangshu/starter-template-ts#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sankeyangshu/starter-template-ts.git"
  },
  "bugs": {
    "url": "https://github.com/sankeyangshu/starter-template-ts/issues"
  },
  "keywords": [],
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./package.json": "./package.json"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "start": "tsx src/index.ts",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "release": "bumpp && pnpm publish",
    "prepublishOnly": "pnpm build",
    "preinstall": "npx only-allow pnpm",
    "prepare": "simple-git-hooks"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.0.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@sankeyangshu/eslint-config": "^2.4.0",
    "@types/node": "^24.5.2",
    "bumpp": "^10.2.3",
    "eslint": "^9.36.0",
    "lint-staged": "^16.2.3",
    "prettier": "^3.6.2",
    "simple-git-hooks": "^2.13.1",
    "tsdown": "^0.15.5",
    "tsx": "^4.20.6",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm typecheck && pnpm lint-staged",
    "commit-msg": "pnpm exec commitlint --edit $1"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
